{
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "BulkTabsExtension",
    "default_popup": "tabs.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["background.js","main.js"],
      "css": ["tabs.css"]
    }
  ],
  "description": "Browser Extension",
  "homepage_url": "https://github.com/Slad3",
  "manifest_version": 2,
  "name": "Bulk Tabs",
  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },
  "permissions": ["tabs", "*://developer.mozilla.org/*", "webRequest"],

  "version": "1.0"
}
